#!/bin/sh


NAME=xtables-addons
PACKAGE_NAME=$NAME-dkms


CVERSION=`dpkg-query -W -f='${Version}' $PACKAGE_NAME | cut -d\: -f2`
case "$1" in
    remove|upgrade|purge)
		echo "Removing all DKMS Modules"
		dkms remove -m $NAME -v $CVERSION --all > /dev/null
		echo "Done."
	;;
    purge)
		delgroup --quiet $NAME
        ;;
esac


